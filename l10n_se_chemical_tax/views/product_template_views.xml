<odoo>
  <data>
    
    <record model="ir.ui.view" id="product_template_form_view">
      <field name="name">chemical_tax</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <field name="company_id" position="before">
          <field name="chemical_tax" />
          <!---field name="elkretsen_miljoavgift" /-->
        </field>
      </field>
    </record>

    
    <record id="product_product_tree_view" model="ir.ui.view">
      <field name="name">chemical_tax_tree</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_product_tree_view" />
      <field name="arch" type="xml">
        <field name="active" position="after">
          <field name="chemical_tax" optional="hide" />
          <!--field name="elkretsen_miljoavgift" optional="hide" /-->
        </field>
      </field>
    </record>
    
    <record id="view_category_property_form" model="ir.ui.view">
      <field name="name">chemical_tax_form</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="account.view_category_property_form"/>
      <field name="arch" type="xml">
        <field name="property_account_expense_categ_id" position="after">
          <field name="chemical_tax"  />
          <field name="chemical_max_tax"/>
          <!--field name="elkretsen_miljoavgift" /-->
        </field>
      </field>
    </record> 

    <record id="hs_code_view_form" model="ir.ui.view">
      <field name="name">hs_chemical_tax_form</field>
      <field name="model">hs.code</field>
      <field name="inherit_id" ref="product_harmonized_system.hs_code_view_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="tax_article_number" widget="selection" />
          <field name="chemical_tax"  />
          <field name="chemical_max_tax"/>
          <!--field name="elkretsen_miljoavgift" /-->
        </field>
      </field>
    </record> 

    <record id="view_account_position_form" model="ir.ui.view">
      <field name="name">account_chemical_tax_form</field>
      <field name="model">account.fiscal.position</field>
      <field name="inherit_id" ref="account.view_account_position_form"/>
      <field name="arch" type="xml">
        <field name="vat_required" position="after">
          <field name="hidden_tax" />
        </field>
      </field>
    </record> 

    <!--record id="view_order_form" model="ir.ui.view">
      <field name="name">sale_view_order_form_chemtax</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">      
        <field name="tax_id" position="after">
          <field name="price_with_chemtax" optional="hide" />         
        </field>
      </field>
    </record-->

    <record id="view_move_form" model="ir.ui.view">
          <field name="name">chemical_tax_tree</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form" />
          <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="after">
              <field name="chemical_tax" optional="hide" /> 
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='quantity']" position="after">
              <field name="chemical_tax" invisible="0" /> 
            </xpath>
          </field>
    </record>
    <!--record id="partner.form" model="ir.ui.view">
      <field name="name">partner_form_chemical_tax</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="res.partner.form" />
      <field name="arch" type="xml">
        <field name="user_id" position="inside">
          <field name="use_chemtax"/> 
          <field name="app_project" attrs="{'invisible': [('use_chemtax', '=', True)]}"/>         
        </field>
      </field>
    </record-->
    <!--record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="use_chemtax" />
            </xpath>
        </field>
    </record-->
   
  </data>
</odoo>
